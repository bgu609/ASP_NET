						<form method="post" action="@Url.Action("Entry", "Members")" class="wpcf7-form">
							<div class="field">
								<div class="row">
									<div class="col-md-6">
										@Html.TextBoxFor(m => m.MemberID, new { placeholder = "아이디를 입력하세요." })
